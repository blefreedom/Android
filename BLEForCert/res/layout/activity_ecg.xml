<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ECGActivity" >    

    <com.langlang.activity.EcgPainterBase.ECGGLSurfaceView
                android:id="@+id/hte_GLSurfaceView_ecg"
                android:paddingTop="0dip"
                android:layout_width="1dip"
                android:layout_height="1dip"
                android:gravity="center"/>
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo_small" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView
	        android:id="@+id/ecg_curr_time_tw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="#4E8EE6"
            android:text="AFCCCDECURTIMEABCDA"
	    />
        <TextView
	        android:id="@+id/ecg_graphic_status_tws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="#4E8EE6"
            android:text="ERASDFERERQWERWERERQW"
	    />
        <TextView
	        android:id="@+id/ecg_speed_tw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="#4E8EE6"
            android:text="XXXXasdfasdfasd"
	    />
	    <TextView
	        android:id="@+id/ecg_status_tw"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
	        android:layout_gravity="left"
	        android:gravity="left"
	        android:textColor="#4E8EE6"
	        android:text="ffffffffffff" />
        <TextView
	        android:id="@+id/ecg_mac_tw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:gravity="left"
            android:textColor="#4E8EE6"
            android:text="dddddddddddddddddddddddd"
	    />
    </LinearLayout>
    
   
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">
	    <Button
	        android:id="@+id/ecg_10_mm_per_s_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="11sp"
            android:text="10mm/s"
	    />
	    <Button
	        android:id="@+id/ecg_20_mm_per_s_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="11sp"
            android:text="20mm/s"
	    /> 
	    <Button
	        android:id="@+id/ecg_select_new_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="11sp"
            android:text="切换设备"
	    />
	    <Button
	        android:id="@+id/ecg_quit_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="center"
            android:textSize="11sp"
            android:text="退出应用"
	    />       
    </LinearLayout>

</RelativeLayout>
