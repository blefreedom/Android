<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_left"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/title_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/title_setting_aboutus"
            android:textColor="@color/title_font"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/title_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/rec_search"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" >

        <ImageView
            android:id="@+id/mailus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:src="@drawable/settings_mailus" />

        <TextView
            android:id="@+id/settings_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mailus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/settings_appname"
            android:textColor="@color/settings_text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ourgoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/settings_appname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="@string/settings_ourgoal"
            android:textColor="@color/settings_text_bule"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/settings_welcome"
        style="@style/settings_text"
        android:text="@string/settings_welcome" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/whiteBg" >

        <TextView
            android:id="@+id/settings_contact"
            style="@style/settings_text"
            android:layout_marginTop="0dp"
            android:drawableRight="@null"
            android:text="@string/settings_contact" />

        <TextView
            android:id="@+id/setinfo_receive_status"
            style="@style/settings_text_right"
            android:text="@string/settings_contactnumber" />
    </RelativeLayout>

</LinearLayout>