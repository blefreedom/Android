<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/topic_topictitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="新手海淘与美亚交涉及体会"
        android:textSize="18sp"
        android:textColor="@color/topic_topictitle" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/lineborder" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp" >

        <ImageView
            android:id="@+id/topic_image"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/account"
            android:visibility="visible" />

        <TextView
            android:id="@+id/topic_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="3"
            android:singleLine="false"
            android:text="测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试测试"
            android:textColor="@color/topic_topiccontent" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/lineborder" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/topic_comments_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/topic_comments" />

        <TextView
            android:id="@+id/topic_comments_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/topic_comments_img"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/topic_comments_img"
            android:text="12"
            android:textSize="12sp"
            android:textColor="@color/topic_topiccomment" />

        <TextView
            android:id="@+id/topic_comments_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/topic_comments_img"
            android:layout_toRightOf="@+id/topic_comments_num"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="条评论"
            android:textSize="12sp"
            android:textColor="@color/topic_topiccomment" />

        <TextView
            android:id="@+id/topic_comments_publisher"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_alignBottom="@+id/topic_comments_img"
            android:layout_toLeftOf="@+id/topic_pub_label"
            android:text="裸奔的兔子"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:textColor="@color/topic_topiccomment" />

        <TextView
            android:id="@+id/topic_pub_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/topic_comments_img"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/topic_comments_pubtime"
            android:text="@string/topic_pub_label"
            android:textSize="12sp"
            android:textColor="@color/topic_topiccomment" />

        <TextView
            android:id="@+id/topic_comments_pubtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/topic_comments_img"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:text="5"
            android:textColor="@color/topic_topiccomment" />
    </RelativeLayout>

</LinearLayout>