<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/trans_item_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="8dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/headImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/userlogo" />

            <TextView
                android:id="@+id/nickName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/headImage"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/headImage"
                android:singleLine="true"
                android:text="TextView" />

            <LinearLayout
                android:id="@+id/service_level_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nickName"
                 android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/headImage"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/puragent_feelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/puragent_fee"
                    android:textColor="@color/purchaseagentlabel"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/puragent_charge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="7.3"
                    android:textColor="@color/purchaseagentval"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/puragent_shippinglabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/puragent_shipping"
                    android:textColor="@color/purchaseagentlabel"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/puragent_trans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="6.8"
                    android:textColor="@color/purchaseagentval"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/puragent_servicelabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/puragent_service"
                    android:textColor="@color/purchaseagentlabel"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/puragent_service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="9.9"
                    android:textColor="@color/purchaseagentval"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/nickName"
                android:layout_below="@+id/service_level_logo"
                android:singleLine="true"
                android:text="一直都用这个"
                android:textColor="@color/topic_pers" />

            <TextView
                android:id="@+id/createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/nickName"
                android:layout_alignParentRight="true"
                android:text="17:34"
                android:textColor="@color/topic_pers" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>