<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_left"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:src="@drawable/btn_back"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/title_our_response"
            android:textColor="@color/title_font"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_right"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/shopcar_confirmbill_complete"
            android:textColor="@color/title_font"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@drawable/personal_userlogin_edittext_normal"
        android:orientation="vertical">
		<TextView 
		    android:id="@+id/topic_response_who"
		    android:layout_width="match_parent"
		    android:layout_height="40dp"
		    android:text="流年岁月"
		    android:textSize="16sp"
		    android:paddingLeft="25dp"
		    android:paddingTop="15dp"
		    android:background="@null"
		    android:visibility="gone"/>
        <EditText
            android:id="@+id/response_content"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@null"
            android:bufferType="spannable"
            android:focusable="true"
            android:gravity="top"
            android:hint="@string/enter_comment_content_hint"
            android:maxLength="50"
            android:paddingLeft="25dp"
            android:textColorHint="@color/personal_edit_hint_font" />
    </LinearLayout>

</LinearLayout>