<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300.5dip"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="132dip"
        android:background="@drawable/folder_dalog_top_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialogtitle1"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:text="@string/dialogtip"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/suretext1"
            android:layout_width="match_parent"
            android:layout_height="95dip"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/personal_dialog_delete_address"
            android:textColor="#000000"
            android:textSize="14sp"/>
       <!-- android:textColor="#c0c0c0" android:layout_gravity="center"-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dip"
        android:layout_marginTop="0.5dip"
        android:gravity="center" >

         <Button
            android:id="@+id/exit_cancels"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:background="@drawable/folder_cancel_selector"
            android:text="@string/dialogcancel" />
        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent" />
  		<Button
  		    android:id="@+id/exit_oks"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/folder_submit_selector"
            android:text="@string/ensure" />
       
    </LinearLayout>

</LinearLayout>