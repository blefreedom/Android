<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/title_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_left"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:id="@+id/title_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/title_setting_inform_type"
            android:textColor="@color/title_font"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/title_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:src="@drawable/rec_search"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView1"
            style="@style/settings_text"
            android:layout_marginTop="0dp"
            android:drawableRight="@null"
            android:text="@string/accept_inform_type" />

        <CheckBox
            android:id="@+id/settings_receivemsg"
            style="@style/settings_button" />
    </RelativeLayout>

    <TextView
        style="@style/settings_tips"
        android:text="@string/accept_inform_type_hint" />

    <LinearLayout
        android:id="@+id/settings_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp" >

            <TextView
                style="@style/settings_text"
                android:layout_marginTop="0dp"
                android:drawableRight="@null"
                android:text="@string/settings_shipping_latesttip" />

            <CheckBox
                android:id="@+id/settings_shipping_latesttip"
                style="@style/settings_button" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp" >

            <TextView
                style="@style/settings_text"
                android:layout_marginTop="0dp"
                android:drawableRight="@null"
                android:text="@string/settings_order_latesttip" />

            <CheckBox
                android:id="@+id/settings_order_latesttip"
                style="@style/settings_button"
                android:checked="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp" >

            <TextView
                style="@style/settings_text"
                android:layout_marginTop="0dp"
                android:drawableRight="@null"
                android:text="@string/settings_topic_latesttip" />

            <CheckBox
                android:id="@+id/settings_topic_latesttip"
                style="@style/settings_button"
                android:checked="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp" >

            <TextView
                style="@style/settings_text"
                android:layout_marginTop="0dp"
                android:drawableRight="@null"
                android:text="@string/settings_goodswarning_latesttip" />

            <CheckBox
                android:id="@+id/settings_goodswarning_latesttip"
                style="@style/settings_button"
                android:checked="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/settings_text"
                android:layout_marginTop="0dp"
                android:drawableRight="@null"
                android:text="@string/settings_activity_latesttip" />

            <CheckBox
                android:id="@+id/settings_activity_latesttip"
                style="@style/settings_button"
                android:checked="true" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>