<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/whiteBg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/source"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/rec_supply_img" />

        <View
            style="@style/greyBg"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/supporthomecredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/credit_card" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shopcar_supporthomecredit"
                    android:textColor="@color/shopcar_paysupport" />

                <ImageView
                    android:id="@+id/translatecom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/transshipment" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/shopcar_translatecom"
                    android:textColor="@color/shopcar_paysupport" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/greyBg"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp" >

        <ImageView
            android:id="@+id/goodsImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:background="@drawable/img_on"
            android:padding="5dp"
            android:src="@drawable/adv_goods" />

        <TextView
            android:id="@+id/goodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/oldprice"
            android:layout_toRightOf="@+id/goodsImage"
            android:lines="2"
            android:text="Abercrombie Fitch 棒球领男sd测试男神驾到，"
            android:textColor="@color/shopcar_goodsname"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/oldprice"
            android:layout_below="@+id/oldprice"
            android:text="$5"
            android:textColor="@color/shopcar_goodsprice"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/goodsrule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/goodscolor"
            android:layout_below="@+id/goodscolor"
            android:text="@string/shopcar_goods_rulelabel"
            android:textColor="@color/shopcar_goodsoldprice" />

        <TextView
            android:id="@+id/goodscolorval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goodscolor"
            android:layout_toRightOf="@+id/goodscolor"
            android:textColor="@color/shopcar_goodsoldprice" />

        <TextView
            android:id="@+id/goodsruleval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goodsrule"
            android:layout_alignLeft="@+id/goodscolorval"
            android:textColor="@color/shopcar_goodsoldprice" />

        <LinearLayout
            android:id="@+id/goodecountselector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/goodsruleval"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-1dp"
                android:gravity="center"
                android:text="@string/number"
                android:textColor="@color/shopcar_goodsoldprice" />

            <TextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-1dp"
                android:layout_marginRight="-1dp"
                android:gravity="center"
                android:text="X1"
                android:textColor="@color/shopcar_goodsoldprice" />
        </LinearLayout>

        <TextView
            android:id="@+id/oldprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/goodsname"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:text="$20"
            android:textColor="@color/shopcar_goodsoldprice"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/goodscolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/goodsname"
            android:layout_below="@+id/goodsname"
            android:text="@string/shopcar_goods_colorlabel"
            android:textColor="@color/shopcar_goodsoldprice" />

    </RelativeLayout>

    <View
        style="@style/greyBg"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-1dp"
                android:gravity="center"
                android:text="@string/number" />

            <TextView
                android:id="@+id/detail_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-1dp"
                    android:gravity="center"
                    android:text="@string/total" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="right"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-1dp"
                    android:gravity="center"
                    android:text="@string/about" />

                <TextView
                    android:id="@+id/mom_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="1100"
                    android:textColor="@color/about_choose" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/greyBg"
        android:layout_width="fill_parent"
        android:layout_height="1dp" />

</LinearLayout>