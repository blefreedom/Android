<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteBg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp" >

        <TextView
            android:id="@+id/tv_personal_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/personal_black_font"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_personal_user_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="3dp"
            android:text="@string/level_now"
            android:textColor="@color/personal_pay_orange"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/user_point_hint"
            android:textColor="@color/personal_font_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:text="@string/level_now"
                android:textColor="@color/personal_font_gray"
                android:textSize="13sp" />

            <View
                android:id="@+id/firstoval"
                style="@style/blueoval"
                android:layout_width="13dp"
                android:layout_height="13dp"/>

            <View
                android:id="@+id/firstview"
                style="@style/blueBg"
                android:layout_width="46dp"
                android:layout_height="1dp"/>

            <View
                android:id="@+id/secondoval"
                style="@style/oval"
                android:layout_width="13dp"
                android:layout_height="13dp"/>

            <View
                android:id="@+id/secondview"
                style="@style/greyBg"
                android:layout_width="46dp"
                android:layout_height="1dp"/>

            <View
                android:id="@+id/thirdoval"
                style="@style/oval"
                android:layout_width="13dp"
                android:layout_height="13dp"/>

            <View
                android:id="@+id/thirdview"
                style="@style/greyBg"
                android:layout_width="46dp"
                android:layout_height="1dp"/>

            <View
                android:id="@+id/fouroval"
                style="@style/oval"
                android:layout_width="13dp"
                android:layout_height="13dp" />

            <View
                android:id="@+id/endview"
                style="@style/greyBg"
                android:layout_width="46dp"
                android:layout_height="1dp"/>

            <View
                android:id="@+id/fiveoval"
                style="@style/oval"
                android:layout_width="13dp"
                android:layout_height="13dp" />

            <TextView
                android:id="@+id/tv_level_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/level_next"
                android:textColor="@color/personal_font_gray"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_level1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="@string/level_num_first" />

            <TextView
                android:id="@+id/tv_level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="47dp"
                android:text="@string/level_num_second" />

            <TextView
                android:id="@+id/tv_level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:text="@string/level_num_third" />

            <TextView
                android:id="@+id/tv_level4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="37dp"
                android:text="@string/level_num_four" />

            <TextView
                android:id="@+id/tv_level5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:text="@string/level_num_five" />
        </LinearLayout>
        </LinearLayout>
        
    <View
        style="@style/greyBg"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/user_lucky_hint"
            android:textColor="@color/personal_font_gray"
            android:textSize="12sp" /> -->
    </LinearLayout>
