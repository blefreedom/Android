            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/puragentdetail_border" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/puragentdetail_border" />

            <!-- 用户评价 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/info_telte"
                android:drawablePadding="10dp"
                android:padding="8dp"
                android:text="@string/user_ite"
                android:textColor="@color/puragentdetail_info"
                android:textSize="15sp" />

            <com.kc.ihaigo.ui.selfwidget.WrapListView
                android:id="@+id/userAppraise"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
            </com.kc.ihaigo.ui.selfwidget.WrapListView>

            <!-- 更多用户评价 -->

            <LinearLayout
                android:id="@+id/lookEvalutation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible" >

                <View
                    style="@style/fillBoxBg"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp" >
                </View>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/more_appraiseStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/look_appraise" />

                        <TextView
                            android:id="@+id/more_appraise"
                            style="@style/more_appraise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"
                            android:text="0" />

                        <TextView
                            style="@style/more_appraiseStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lookAppraise" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/more_appBut"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/more" />
                </LinearLayout>

                <View
                    style="@style/fillBoxBg"
                    android:layout_width="fill_parent"
                    android:layout_height="1px" >
                </View>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>